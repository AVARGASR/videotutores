          <i class="material-icons prefix">account_circle</i>
          <%= f.label :rut %><br>
          <%= f.text_field :rut %>
        </div>
        <div class="input-field col s5 cyan-text text-lighten-4">
          <i class="material-icons prefix">markunread_mailbox</i>
          <%= f.label :email %><br>
