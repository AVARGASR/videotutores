  <% end %>




<div class="row">
  
      <div class="row">
        <div class="input-field col s5 cyan-text text-lighten-4">
          <i class="material-icons prefix">account_circle</i>
          <%= f.label :nombre %><br>
          <%= f.text_field :nombre %>
        </div>

        <div class="input-field col s5 cyan-text text-lighten-4">
          <i class="material-icons prefix">account_circle</i>
          <%= f.label :apellido %><br>
          <%= f.text_field :apellido %>
